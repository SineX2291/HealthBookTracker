﻿@{
ViewData["Title"] = "Home Page";
}

<div class="home-background d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow-lg border-0 rounded-4 bg-body text-body"
         style="max-width: 800px;">
        <div class="card-body text-center p-5">
            <h1 class="display-4 mb-3 fw-bold text-info">Добро пожаловать в HealthBookTracker</h1>
            <p class="lead text-muted mb-4">
                Удобный сервис для отслеживания сотрудников и их медицинских книжек.
            </p>

            <div class="row mb-4">
                <div class="col">
                    <div class="p-3">
                        ✔ Просмотр сотрудников
                    </div>
                </div>
                <div class="col">
                    <div class="p-3">
                        ✔ Добавление новых сотрудников
                    </div>
                </div>
                <div class="col">
                    <div class="p-3">
                        ✔ Напоминания о сроках
                    </div>
                </div>
            </div>

            <div class="d-grid gap-2">
                <a asp-controller="Employees" asp-action="Index"
                   class="btn btn-primary btn-lg">
                    <i class="bi bi-people"></i>
                    Сотрудники
                </a>

                <a asp-controller="Employees" asp-action="Create"
                   class="btn btn-outline-success">
                    <i class="bi bi-person-plus"></i>
                    Добавить сотрудника
                </a>
            </div>
        </div>
    </div>
</div>