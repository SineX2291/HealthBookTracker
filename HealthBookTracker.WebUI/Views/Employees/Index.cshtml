@model IEnumerable<HealthBookTracker.Domain.Entities.Employee>
@{
    ViewData["Title"] = "Список сотрудников";
    Layout = "_Layout";
}

<h2 class="mb-4">Сотрудники</h2>

<div class="card p-3 shadow-sm">

    <!-- 🔎 Форма поиска -->
    <form method="get" asp-controller="Employees" asp-action="Index" class="mb-3">
        <div class="input-group">
            <input type="text" name="search" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Поиск по имени, фамилии или должности..." />
            <button type="submit" class="btn btn-outline-primary">Поиск</button>
        </div>
    </form>

    <!-- 📋 Таблица сотрудников -->
    <table class="table table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th class="text-start">Имя</th>
                <th class="text-start">Фамилия</th>
                <th>Должность</th>
                <th>Дата рождения</th>
                <th>Дата окончания медкнижки</th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["DaysSortParam"]" class="text-decoration-none text-white">
                        Дней до окончания медкнижки                      
                        @if ((ViewData["CurrentSort"] as string) == "DaysAsc")
                        {
                            <span>▲</span>
                        }
                        else if ((ViewData["CurrentSort"] as string) == "DaysDesc")
                        {

                            <span>▼</span>
                        }
                    </a>
                </th>
                <th class="text-center">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                var rowClass = employee.MedicalBookEndDate == null ? "table-secondary" :
                employee.DaysUntilExpiration < 10 ? "table-danger" :
                employee.DaysUntilExpiration < 20 ? "table-warning" :
                "table-success";

                <tr class="@rowClass">
                    <td class="text-start p-2">@employee.FirstName</td>
                    <td class="text-start p-2">@employee.LastName</td>
                    <td class="p-2">@employee.Position</td>
                    <td>@(employee.DateOfBirth.HasValue? employee.DateOfBirth.Value.ToShortDateString() : "—")</td>
                    <td>@(employee.MedicalBookEndDate.HasValue? employee.MedicalBookEndDate.Value.ToShortDateString() : "—")</td>
                    <td class="p-2 fw-bold text-center">
                        @(employee.DaysUntilExpiration != null ? $"{employee.DaysUntilExpiration} дней" : "—")
                    </td>
                    <td class="p-2 text-center">
                        <a class="btn btn-sm btn-outline-primary rounded-circle me-1"
                           href="@Url.Action("Edit", "Employees", new { id = employee.Id })"
                           title="Редактировать">
                            ✏
                        </a>
                        <form asp-action="Delete" asp-controller="Employees" asp-route-id="@employee.Id"
                              method="post" onsubmit="return confirm('Вы уверены, что хотите удалить сотрудника?')"
                              style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-outline-danger rounded-circle" title="Удалить">
                                🗑
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- ➕ Добавить -->
    <div class="text-center mt-3">
        <a class="btn btn-outline-success btn-lg rounded-circle shadow-sm"
           href="@Url.Action("Create", "Employees")" title="Добавить нового сотрудника">
            ➕
        </a>
    </div>
</div>