@{
    ViewData["Title"] = "Вход";
}

<h2>Вход</h2>

<form method="post">
    <div class="mb-3">
        <label>Пароль</label>
        <input type="password" name="password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Войти</button>
</form>

@if (ViewBag.Error != null)
{
    <div class="text-danger mt-2">@ViewBag.Error</div>
}